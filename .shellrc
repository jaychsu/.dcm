# Application used by Node
alias nd='node'
alias n='npm'
alias nr='npm run'

alias gp='gulp'
alias gt='grunt'
alias ins='bower install && npm install'
alias cins='bower install && cnpm install'
alias wp='webpack'
alias wps='webpack-dev-server'
