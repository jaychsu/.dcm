# Shell
alias grep='grep --color'
alias la='ls -a'
alias ll='ls -l'
alias rm='rm -v'
alias sudo='sudo -E'
alias vi='vim --noplugin'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~ && cd'

# Application used by HomeBrew
alias g='git'
alias stpg='postgres -D /usr/local/var/postgres'
