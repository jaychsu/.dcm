if [[ $OSTYPE == darwin* ]]; then
    alias gvim='open -a MacVim'
    alias ls='ls -GFh'
    alias o='open'
else
    alias ls='ls --color -hF --show-control-chars'
    alias o='gnome-open'
    alias open='gnome-open'
fi

# Temp: Connect Server
alias gosvr='ssh sujunhong@192.168.2.2'
